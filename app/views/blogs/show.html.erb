<h2><%= @blog.title %></h2>
<h4>By: <%= @blog.user.email %></h4>

<table>
  <thead>
    <tr>
      <th>Post Title</th>
      <th>Comments</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, [@blog, post] %>
        <td><%= post.comments.count %>
      </tr>
    <% end %>
  </tbody>
</table>
